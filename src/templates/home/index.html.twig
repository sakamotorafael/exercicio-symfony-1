<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Cadastro de veículos</title>
		<link rel="stylesheet" href="/styles/style.css">
	</head>
	<body>
		{% for message in app.flashes('message') %}
			<div class="flash-notice">
				{{message}}
			</div>
		{% endfor %}
		{{ form_start(formVeiculo, { 'action': path('create')} ) }}
			{{ form_widget(formVeiculo) }}
			<div>
			<input id="submit" type="submit" value="Cadastrar"/>
			</div>
			{{ form_errors(formVeiculo) }}
		{{ form_end(formVeiculo) }}
		<table>
			<thead>
				<tr>
					<th>Veículo</th>
					<th>Quantidade de rodas</th>
					<th>Motorizado</th>
					<th>Tipo de via</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for veiculo in veiculos %}
					<tr>
						<td>{{ veiculo.nome }}</td>
						<td>{{veiculo.qtdRodas}}</td>
						{% if veiculo.motorizado %}
						<td>Sim</td>
						{% else %}
						<td>Não</td>
						{% endif %}
						<td>{{veiculo.tipoVia}}</td>
						<td>
							<a href="{{ path('edit', { 'id': veiculo.id}) }}">editar</a>
						</td>
						<td>
							<a href="{{ path('delete', { 'id': veiculo.id}) }}">deletar</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	<!-- <script src="/javascripts/validation.js"></script> -->
	</body>
</html>
